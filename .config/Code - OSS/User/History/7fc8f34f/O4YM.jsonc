// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "output": ["DP-1", "DP-2"],
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 35, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 1, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
    	"custom/mybutton",
    	"hyprland/window",
        "mpris",
        "mpd",
    ],
    "modules-center": [
        "hyprland/workspaces",
        
    ],
    "modules-right": [
    	"tray",
        "pulseaudio",
        "network",
        "clock",
    ],
	"hyprland/workspaces": {
	    "format": "{icon}",
		"active-only": false,
		"sort-by-number": false,
		"on-click": "activate",
		"all-outputs": true,
		"format-icons": {
		    "1": "  ",
		    "2": "  ",
		    "3": "  ",
		    "4": "  ",
		    "5": "  ",
 		}
 	},
 	"hyprland/window": {
 		"format": "{initialTitle}",
 	 	"max-length": 50,
 		"seperate-outputs": false,
 		"icon": true,
 		"icon-size": 16
 	},
 	"mpris": {
 		"format": "{player_icon}",
 		"format-paused": "{status_icon}",
 		"player-icons": {
 			"default": "   "
 		},
 		"status-icons": {
 			"paused": "   "
 		},
 		"max-length": 50
 		// "ignored-players": ["firefox"]
 	},
    
    
    "tray": {
        // "icon-size": 21,
        "spacing": 6
    },
    "clock": {
        // "timezone": "America/New_York",
        "format": "{:%a %b %d  %I:%M %p}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click": "alacritty -e calcurse"
    },
    "cpu": {
        "format": "{usage}% ",
        "tooltip": true,
        "interval": 5,
        "on-click": "missioncenter"
    },
    "memory": {
        "format": "{used:0.1f}GB ",
        "tooltip": true,
        "interval": 5,
        "on-click": "missioncenter"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power Profile: {profile}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },
    "network": {
    	//"format": "2",
        "format-wifi": "({signalStrength}%) ",
        "format-ethernet": "Wired ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-disconnected": "Disconnected ⚠",
        "on-click": "/home/seto/.config/Wofi/rofi-wifi-menu/rofi-wifi-menu.sh",
        "on-click-right": "nm-connection-editor"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}  {format_source}",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": "{volume}%    {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "GTK_THEME=Plata-Noir pavucontrol",
    },
    
    "custom/mybutton": {
        "format": "\uf359",
        "tooltip": true,
        "tooltip-format": "App Menu",
        "on-click": "wofi --show drun"
    },
	"custom/powerbutton": {
        "format": "\uf011",
        "tooltip": true,
        "tooltip-format": "Power Menu",
        "on-click": "/home/zach/.config/rofi/powermenu/powermenu.sh"
    },

}