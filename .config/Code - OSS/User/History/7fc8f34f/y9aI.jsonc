// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "output": ["DP-1", "DP-2"],
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 35, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 6, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
    	"custom/mybutton",
    	"hyprland/window"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
    	"tray",
        "pulseaudio",
        "cpu",
        "memory",
        "clock",
        "custom/weather",
        "custom/notification"
    ],
	"hyprland/workspaces": {
	    "format": "{icon}",
		"active-only": false,
		"sort-by-number": false,
		"on-click": "activate",
		"all-outputs": true,
		"format-icons": {
		    "1": " ÓùÖ ",
		    "2": " Óûï ",
		    "3": " Óû≤ ",
		    "4": " Óú° ",
		    "5": " Óú® ",
 		}
 	},
 	"hyprland/window": {
 		"format": "{initialTitle}",
 	 	"max-length": 50,
 		"seperate-outputs": false,
 		"icon": true,
 		"icon-size": 16
 	},
 	"mpris": {
 		"format": "{player_icon}",
 		"format-paused": "{status_icon}",
 		"player-icons": {
 			"default": " ÔÖÑ  "
 		},
 		"status-icons": {
 			"paused": " Ôäã  "
 		},
 		"max-length": 50
 		// "ignored-players": ["firefox"]
 	},
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        "format": "{:%a %b %d  %I:%M %p}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "on-click": "alacritty -e calcurse"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true,
        "interval": 5,
        "on-click": "missioncenter"
    },
    "memory": {
        "format": "{used:0.1f}GB ÔÉâ",
        "tooltip": true,
        "interval": 5,
        "on-click": "missioncenter"
    },
 
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}     {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "{volume}% ÔÄ¶   {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "GTK_THEME=Plata-Noir pavucontrol",
        "on-click-right": "swayosd-client --input-volume mute-toggle",
        "on-click-middle": "swayosd-client --output-volume mute-toggle",
        "on-scroll-up": "swayosd-client --output-volume 5",
        "on-scroll-down": "swayosd-client --output-volume -5"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/mybutton": {
        "format": "\uf359",
        "tooltip": true,
        "tooltip-format": "App Menu",
        "on-click": "wofi --show drun"
    },
	"custom/powerbutton": {
        "format": "\uf011",
        "tooltip": true,
        "tooltip-format": "Power Menu",
        "on-click": "/home/zach/.config/rofi/powermenu/powermenu.sh"
    },
   
    "custom/notification": {
      "tooltip": false,
      "format": "{} {icon}",
      "format-icons": {
        "notification": " Û∞Çö ",
        "none": " Û∞Çö ",
        "dnd-notification": " Û∞Çõ ",
        "dnd-none": " Û∞Çõ ",
        "inhibited-notification": " Û∞Çö ",
        "inhibited-none": " Û∞Çö ",
        "dnd-inhibited-notification": " Û∞Çõ ",
        "dnd-inhibited-none": " Û∞Çõ "
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
    }
}